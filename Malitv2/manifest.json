{
    "description": "Gets the text of a webpage and logs it to the console",
    "manifest_version": 2,
    "name": "Malit",
    "version": "0.2",
    "permissions": ["activeTab", "tabs"],
    "background": {
        "scripts": ["background.js"],
        "persistent": true
    },

    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "images/get_started32.png"
        },
        "default_title": "Malit the trolls!",
        "browser_style": true
    }
}
